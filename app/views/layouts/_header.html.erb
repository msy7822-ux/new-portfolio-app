<header class="navbar fixed-top" id="header">
  <div class="container">
    <% if logged_in?  %>
      <p id="not-login-logo">Circlindex</p>
    <% else %>
      <%= link_to "Circlindex", root_path, id: 'logo' %>
    <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        
        <% if logged_in? %>
          <li><%= link_to 'Posts', posts_path, class: 'items' %></li>
          <li><%= link_to 'Users', users_path, class: 'items' %></li>
          
          <li class="dropdown">
            <a href="#" class="dropdown-toggle items" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li><%= link_to "Log out", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to 'Home', root_path, class: 'items' %></li>
          <li><%= link_to 'About', about_path, class: 'items' %></li>
          <li><%= link_to 'Log in', login_path, class: 'items' %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
