<%= provide(:title, 'Users') %>


<div class="index">
    <h3>All Users</h3>
    <div class="flex">
        
        <% @users.each do |user| %>
            <div class="user-list">
                
                <% if user.picture? %>
                    <%= link_to image_tag(user.picture.url, class: 'user-image'), user_url(user) %>
                <% else %>
                    <%= link_to image_tag('default.png', class: 'user-image'), user_url(user) %>
                <% end %>
                <br>
                <br>
                <p>ユーザー名：<%= link_to user.name, user_url(user) %></p>
            </div>
        <% end %>
    
    </div>
</div>

