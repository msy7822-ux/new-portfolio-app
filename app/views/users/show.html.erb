<%= provide(:title , @user.name) %>

<%= @user.name %>, <%= @user.email %>, <%= @user.univ_name %>

<br>

<% if @user.picture? %>
    <%= image_tag @user.picture.url %>
<% else %>
    <%= image_tag 'default.png' %>
<% end %>

<br>
<br>
<% if current_user == @user %>
    <%= link_to 'アカウントを削除する', user_url(@user), method: :delete, data: { confirm: "アカウントを削除しますがよろしいですか？" } %>
<% end %>



