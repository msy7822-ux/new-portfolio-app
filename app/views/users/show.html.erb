<%= provide(:title , @user.name) %>

<%= @user.name %>, <%= @user.email %>, <%= @user.univ_name %>

<br>

<% if @user.picture? %>
    <%= image_tag @user.picture.url %>
<% else %>
    <%= image_tag 'default.png' %>
<% end %>

<br>
<br>
<% if current_user == @user %>
    <%= link_to 'アカウントを削除する', user_url(@user), method: :delete, data: { confirm: "アカウントを削除しますがよろしいですか？" } %>
<% end %>

<br>


<% if @user.posts != [] %>
    <br>
    <p>ユーザーの投稿一覧</p>
    <div class="show-posts">
        <% @user.posts.each do |post| %>
            <a href="<%= post_path(post.id) %>">
                <div class="card posts-index">
                  <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"/><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text></svg>
                  <div class="card-body">
                    <h5 class="card-title">投稿者：<%= post.user.name %></h5>
                    <p class="card-text">サークル名：<%= post.circle_name %></p>
                    <p class="card-text">大学名：<%= post.univ_name %></p>
                    <p class="card-text">活動内容<%= simple_format post.content %></p>
                  </div>
                </div>
            </a>
        <% end %>
    </div>
<% end %>


